// Input: [1, [2, [3, 4]], 5, [7]]
// Output: [1, 2, 3, 4, 5, 7]

const arr = [1, [2, [3, 4]], 5, [7]];

console.log(flatten(arr));

function flatten(arr) {
   let res = [];
  for (let item of arr) {
    if (Array.isArray(item)) {
      res = res.concat(flatten(item));
    } else {
      res.push(item);
    }
  }

return res;
}